extends layout
block content
  include mixins
  - let {categories, news} = require('../data')
  - categories = categories.slice(1)
  header.page-header
    ul
      +link("Город")(class="active")
      each category in categories 
        +link(category)
  main.page-main
    each arcticle in news
      +arcticle(arcticle)
    ul.pagination
      +link(1)(class="active")
      each i in [2,3,4,5]
        +link(i)
      +link("->")
  footer.page-footer
    ul
      each category in categories
        +link(category)
